<Project>
    <PropertyGroup>
        <RetroEngineBackend Condition="'$(RetroEngineBackend)' == ''">Native</RetroEngineBackend>
    </PropertyGroup>
    <ItemGroup Condition="'$(RetroEngineBackend)' == 'Native'">
        <PackageReference Include="RetroEngine.Portable.Native" Version="$(RetroEngineVersion)" />
    </ItemGroup>
    <!--
    Custom: user is responsible for referencing their own backend package
    or project that implements the same public API.
    We intentionally do *nothing* here so theyâ€™re free to wire it up.
  -->
    <PropertyGroup Condition="'$(RetroEngineBackend)' == 'Custom'">
        <_RetroEngineUsingCustomBackend>true</_RetroEngineUsingCustomBackend>
    </PropertyGroup>
</Project>
