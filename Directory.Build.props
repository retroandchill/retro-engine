<Project>
  <PropertyGroup>
    <!-- Root directory of the repo -->
    <RepoRoot>$(MSBuildThisFileDirectory)</RepoRoot>

    <!--
      Output roots for all managed projects.

      RetroBinRoot:
        - Default: $(RepoRoot)artifacts\bin\
        - Override: /p:RetroBinRoot=... (from CMake)

      RetroObjRoot:
        - Default: $(RepoRoot)artifacts\obj\
        - Override: /p:RetroObjRoot=... (optional).
    -->
    <RetroBinRoot Condition="'$(RetroBinRoot)' == ''">$(RepoRoot)artifacts\bin\</RetroBinRoot>
    <RetroObjRoot Condition="'$(RetroObjRoot)' == ''">$(RepoRoot)artifacts\obj\</RetroObjRoot>

    <!--
      BaseOutputPath controls "bin" location for all projects under this tree.
      BaseIntermediateOutputPath controls "obj" location.
    -->
    <BaseOutputPath>$(RetroBinRoot)$(Configuration)\</BaseOutputPath>
    <BaseIntermediateOutputPath>$(RetroObjRoot)$(Configuration)\</BaseIntermediateOutputPath>
  </PropertyGroup>
</Project>